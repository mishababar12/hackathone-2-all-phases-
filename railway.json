{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "docker",
    "context": "phase-2-web/backend",
    "dockerfile": "Dockerfile"
  },
  "deploy": {
    "startCommand": "uvicorn src.main:app --host 0.0.0.0 --port $PORT",
    "healthcheckPath": "/health",
    "restartPolicy": "on-failure"
  }
}
